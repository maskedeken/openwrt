+	struct volume *data = volume_find("rootfs_data");
+	if (data) {
+		volume_init(data);
+
+	  switch (volume_identify(data)) {
+		case FS_EXT4: {
+			char cfg[] = "/tmp/ext4_cfg";
+
+			/* Mount volume and try extroot (using fstab from that vol) */
+			mkdir_p(cfg, 0755);
