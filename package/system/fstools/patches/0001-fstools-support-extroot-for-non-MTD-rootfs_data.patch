+				err = mount_extroot(cfg);
+				umount2(cfg, MNT_DETACH);
+			}
+			if (err < 0)
+				rmdir("/tmp/overlay");
+			rmdir(cfg);
+			return err;
+		}
+
+		case FS_F2FS: {
+			char cfg[] = "/tmp/f2fs_cfg";
+
+			/* Mount volume and try extroot (using fstab from that vol) */
+			mkdir_p(cfg, 0755);
+			if (!mount(data->blk, cfg, "f2fs", MS_NOATIME, NULL)) {
